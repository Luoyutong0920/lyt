body,html,div{
    margin:0;
    padding:0;
}
html{
    height:100%;
}
body{
    height: 100%;
}
.container{
    position:relative ;
    height:100%;
    overflow:hidden;
    white-space: nowrap;
}
.container:hover .slide_buy{
    transform:translate3d(-5%, 0, 0);
}
/****Ò³Ãæ×ó°ë±ß****/
.slide{
    height:100%;
    width:80%;
    display: inline-block;
    position:relative;
    transition:all .8s ease;
    text-align: center;
}
.slide_buy{
    margin-left:-30%;
}
.container .slide_buy:hover{
    transform:translate3d(5%, 0, 0)
}
.slide .wrapper{
    position:relative;
    height:100%;
    overflow: hidden;
    transform: skew(-5deg) translateZ(0);
}
.slide_buy .wrapper{
    margin-right:-20px;
}
/****±³¾°****/
.slide .wrapper .bg{
    position: absolute;
    top:0;
    background-repeat: no-repeat;
    background-size: cover;
    width: 100%;
    height:100%;
    transition: all .8s ease;
    transform:skew(5deg) translateZ(0);
}
.slide_buy .wrapper .bg{
    background-image:url('../img/bg_blue.jpg');
    margin-left:20%;
    right: -10%;
}
.slide:hover .wrapper .bg{
     -webkit-transform: skew(5deg) scale(1.1) translateZ(0);
}
.slide_buy:hover .bg{
    -webkit-transform: translate3d(-3%,0,0) skew(5deg);
}
/****ÕÚÕÖ²ã****/
.slide .wrapper .mask{
    position: absolute;
    top:0;
    width: 150%;
    height:100%;
    background-color: black;
    opacity: 0;
    transition: opcity .8s;
}
.slide_buy .wrapper .mask{
    right: -10%;
}
.container:hover .slide .wrapper .mask{
    opacity:.5;
}
.container .slide:hover .wrapper .mask{
    opacity: 0;
}


/****×ó°ë±ßÄÚÈÝ****/
.content{
    position:absolute;
